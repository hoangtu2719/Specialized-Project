@model Gymer.Models.BaiVietKT

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/ADMIN/Views/Layout/Layout.cshtml";
}



@using (Html.BeginForm("Create", "BaiVietKTs", FormMethod.Post, new { @enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <b class="btn btn-dark container-fluid">Bài Viết Kiến Thức</b>
